- content_for(:page_header) do
  | Registro de usuario
.col-md-offset-4.col-md-3
  .panel.panel-default
    .panel-heading
      h2.text-center Registrarse
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .panel-body
        = f.error_notification
        .form-inputs
          = f.input :email, label: "Correo electronico", required: true, autofocus: true
          = f.input :password, label: "Contraseña", required: true, hint: ("#{@minimum_password_length} caracteres minimo" if @minimum_password_length)
          = f.input :password_confirmation, label: "Confirmar contraseña", required: true
      .panel-footer
        .form-actions
          = f.button :submit, "Registrarse", class: 'btn btn-default btn-lg btn-block'
